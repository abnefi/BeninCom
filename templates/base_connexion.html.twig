{% extends 'base.html.twig' %}

{% block title %}New User{% endblock %}

{% block block_active %}
 <div class="popup_title">
        Connectez-vous à ComBénin
    </div>

    <style>
        .login_btn
        {
            background: #488FF0;
            border-radius: 8px;
            width: 150px;
            line-height: 45px;
            font-weight: bold;
            font-size: 14px;
            display: -webkit-flex;
            display: -moz-flex;
            display: -ms-flex;
            display: -o-flex;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #F3F3F3;
            cursor: pointer;
            transition: 0.3s;
        }

    </style>


<form method="post" class="popup_form">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }},  <a href="{{ path('app_logout') }}">Se deconnecter</a>
            </div>
        {% endif %}

        <input type="hidden" id="login-form-rememberme" name="login-form[rememberMe]" value="1">
        <div class="popup_form__input field-login-form-login">
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" tabindex="1" class="form-control" placeholder="Pseudo or e-mail" required autofocus style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;" autocomplete="off">

            <div class="popup_form__input-ico">
                <svg width="14" height="19" viewBox="0 0 14 19" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M7 10.5C4.09937 10.5 1.75 8.15063 1.75 5.25C1.75 2.34938 4.09937 0 7 0C9.90063 0 12.25 2.34938 12.25 5.25C12.25 8.15063 9.90063 10.5 7 10.5ZM0 18.375C0 14.509 3.13401 11.375 7 11.375C10.866 11.375 14 14.509 14 18.375H12.25C12.25 15.4755 9.8995 13.125 7 13.125C4.1005 13.125 1.75 15.4755 1.75 18.375H0ZM10.5 5.25C10.5 7.18375 8.93375 8.75 7 8.75C5.06625 8.75 3.5 7.18375 3.5 5.25C3.5 3.31625 5.06625 1.75 7 1.75C8.93375 1.75 10.5 3.31625 10.5 5.25Z"></path>
                </svg>
            </div>
            <span class="invalid-feedback"></span>
        </div>
        <div class="popup_form__input field-login-form-password">
            <input type="password" name="password" id="inputPassword" class="form-control" tabindex="2" placeholder="Mot de passe" aria-required="true" required="" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;" autocomplete="off">
            <div class="popup_form__input-ico">
                <svg width="14" height="17" viewBox="0 0 14 17" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M13.2222 5.44444H11.6667V4.66667C11.6667 2.08934 9.57733 0 7 0C4.42267 0 2.33333 2.08934 2.33333 4.66667V5.44444H0.777778C0.348223 5.44444 0 5.79267 0 6.22222V15.5556C0 15.9851 0.348223 16.3333 0.777778 16.3333H13.2222C13.6518 16.3333 14 15.9851 14 15.5556V6.22222C14 5.79267 13.6518 5.44444 13.2222 5.44444ZM1.55556 14.7778V7H12.4444V14.7778H1.55556ZM7.77778 10.1111V11.6667H6.22222V10.1111H7.77778ZM4.66667 10.1111H3.11111V11.6667H4.66667V10.1111ZM9.33333 11.6667V10.1111H10.8889V11.6667H9.33333ZM10.1111 4.66667V5.44444H3.88889V4.66667C3.88889 2.94845 5.28178 1.55556 7 1.55556C8.71822 1.55556 10.1111 2.94845 10.1111 4.66667Z"></path>
                </svg>
            </div>
            <span class="invalid-feedback"></span>
        </div>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se rappeler de moi
            </label>
        </div>
        <div class="forgot_password">
			<span>
				Mot de passe oublié ?
			</span>
        </div>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <button type="submit" tabindex="3">
            Se connecter
        </button>
    </form>


    <div class="popup_wite__btn popup-singup_btn" tabindex="4">
        <a href="{{ path('user_new') }}" style="text-decoration: none"}>
        Créer un compte
        </a>
    </div>
    <div class="popup_social">
        <div class="popup_social__title">
            Connectez-vous avec les réseaux sociaux
        </div>
        <ul class="popup_social__list">
            <li>
                <a href="/user/auth?authclient=vkontakte">
                    <img src="{{ asset('images/vk.svg') }}" alt="ico">
                </a>
            </li>
            <li>
                <a href="/user/auth?authclient=google">
                    <img src="{{ asset('images/google.svg') }}" alt="ico">
                </a>
            </li>
        </ul>
    </div>
</div>
{% endblock %}