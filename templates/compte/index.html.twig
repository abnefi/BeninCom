{% extends 'base.html.twig' %}

{% block title %}Compte index{% endblock %}

{% block body %}
    <h1>Compte index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Soldedisponible</th>
                <th>Duregele</th>
                <th>Montantgele</th>
                <th>Tauxgele</th>
                <th>EstValide</th>
                <th>Estretirable</th>
                <th>Portefeuille</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for compte in comptes %}
            <tr>
                <td>{{ compte.id }}</td>
                <td>{{ compte.libelle }}</td>
                <td>{{ compte.soldedisponible }}</td>
                <td>{{ compte.duregele ? compte.duregele|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ compte.montantgele }}</td>
                <td>{{ compte.tauxgele }}</td>
                <td>{{ compte.estValide ? 'Yes' : 'No' }}</td>
                <td>{{ compte.estretirable ? 'Yes' : 'No' }}</td>
                <td>{{ compte.portefeuille }}</td>
                <td>
                    <a href="{{ path('compte_show', {'id': compte.id}) }}">show</a>
                    <a href="{{ path('compte_edit', {'id': compte.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('compte_new') }}">Create new</a>
{% endblock %}
