{% extends 'base.html.twig' %}

{% block title %}Compte{% endblock %}

{% block body %}
    <h1>Compte</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ compte.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ compte.libelle }}</td>
            </tr>
            <tr>
                <th>Soldedisponible</th>
                <td>{{ compte.soldedisponible }}</td>
            </tr>
            <tr>
                <th>Duregele</th>
                <td>{{ compte.duregele ? compte.duregele|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Montantgele</th>
                <td>{{ compte.montantgele }}</td>
            </tr>
            <tr>
                <th>Tauxgele</th>
                <td>{{ compte.tauxgele }}</td>
            </tr>
            <tr>
                <th>EstValide</th>
                <td>{{ compte.estValide ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Estretirable</th>
                <td>{{ compte.estretirable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Portefeuille</th>
                <td>{{ compte.portefeuille }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('compte_index') }}">back to list</a>

    <a href="{{ path('compte_edit', {'id': compte.id}) }}">edit</a>

    {{ include('compte/_delete_form.html.twig') }}
{% endblock %}
