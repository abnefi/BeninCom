{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}

{% block body %}
    <h1>Paiement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ paiement.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ paiement.libelle }}</td>
            </tr>
            <tr>
                <th>Datepaiement</th>
                <td>{{ paiement.datepaiement ? paiement.datepaiement|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ paiement.montant }}</td>
            </tr>
            <tr>
                <th>Motif</th>
                <td>{{ paiement.motif }}</td>
            </tr>
            <tr>
                <th>Mode</th>
                <td>{{ paiement.mode }}</td>
            </tr>
            <tr>
                <th>EstAprouver</th>
                <td>{{ paiement.estAprouver ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('paiement_index') }}">back to list</a>

    <a href="{{ path('paiement_edit', {'id': paiement.id}) }}">edit</a>

    {{ include('paiement/_delete_form.html.twig') }}
{% endblock %}
